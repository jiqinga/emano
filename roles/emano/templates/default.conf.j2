server {
    listen      80;
    server_name  nginx;
    access_log  /var/log/nginx/emano.access.log  main;
    error_log   /var/log/nginx/emano.error.log   warn;

 ###description:package manage url
   location /packagemanager {
             proxy_pass                             http://pkg:3002/packagemanager;
             proxy_redirect                         http://pkg:3002/packagemanager/ http://pkg:3003/packagemanager/;
             proxy_set_header    Host               $host:$server_port;
             proxy_set_header    X-Real-IP          $remote_addr;
             proxy_set_header    X-Forwarded-For    $proxy_add_x_forwarded_for;
             client_max_body_size    10000m;
             break;
        }


